{% extends 'base.html.twig' %}

{% block body %}
  <div class 'container mt-4'>
    <h2 class="mx-auto" style="width: 400px">Ajout d'un tracker</h2>

    {% for message in app.flashes('success') %}
      <div class="alert alert-success mt-4">
        {{ message }}
      </div>
    {% endfor %}
  
    <div class="mx-auto" style="width: 400px;">
      {{ form_start(tracker_new) }}

        <div class="form-group">
          {{ form_label(tracker_new.name) }}
          {{ form_widget(tracker_new.name) }}
          <div class='form-error'>
            {{ form_errors(tracker_new.name) }}
        </div>

        <div class="form-group">
          {{ form_label(tracker_new.imei) }}
          {{ form_widget(tracker_new.imei) }}
          <div class='form-error'>
            {{ form_errors(tracker_new.imei) }}
        </div>
      
		  	{{ form_row(tracker_new._token) }}
      
        <div class="form-group">
          {{ form_row(tracker_new.submit) }}
        </div>
      {{ form_end(tracker_new) }}   
    </div>  
  </div 
{% endblock %}