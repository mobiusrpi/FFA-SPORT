 {% extends 'base.html.twig' %}

{% block title %}Inscription aux compétitions{% endblock %}

{% block body %}
    <div class 'container mt-4'>
      <h2 class= "mx-auto" style="width: 400px">Inscription </h2>

      {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-4">
          {{ message }}
        </div>   
      {% endfor %}  
      <div class="">
 	      <div>
          <p class= 'text-center'>Inscription pour la compétition de {{ compet.typecomp.type }} </br>
          se déroulant à {{ compet.location }} du {{ compet.startDate|format_datetime(pattern='d MMMM Y') }} au {{compet.endDate|format_datetime(pattern='d MMMM Y') }}}}
        </div>
        <div class="mx-auto" style="width: 400px;">
          {{ form_start(competition_reg) }}
            <div class="form-group">
                {{ form_label(competition_reg.crews) }}
                {{ form_widget(competition_reg.crews) }}
                <div class='form-error'>
                    {{ form_errors(competition_reg.crews) }}            
            </div>
                            
		        {{ form_row(competition_reg._token) }}
	          
            <div class="form-group">
                {{ form_row(competition_reg.submit) }}
            </div>   
 
          {{ form_end(competition_reg) }}   
 
      </div>  
  </div>
{% endblock %}