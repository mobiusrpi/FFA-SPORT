{% extends 'base.html.twig' %}

{% block title %}
  Utilisateurs
{% endblock %}

{% block body %}
    <div class="container mt-4">
      {% if not users.items is same as ([]) %}
        <h1>Utilisateurs</h1>

        {% for message in app.flashes('success') %}
          <div class="alert alert-success mt-4">
            {{message}}
          </div> 
        {% endfor %}

        <div class ="count mt-4">
          Il y a {{ users.getTotalItemCount }} utilisateurs
        </div>
        
        <table class="table table-dark">
            <thead>
                <tr>
                  <th class="text-center" scope="col">Nom</th>
                  <th class="text-center" scope="col">Pseudo</th>
                  <th class="text-center" scope="col">Email</th>
                  <th class="text-center" scope="col">Profil</th>                    
                  <th class="text-center" scope="col">Action</th>
                </tr>
            </thead>
            <tbody>      
              {% for user in users %}
                <tr class='table-primary'>
                  <th scope="row">{{ user.fullName }}</td>
                  <td>{{ user.pseudo }}</td>
                  <td>{{ user.email }}</td>
                  <td>{{ user.roles[0] }}</td>                  
                  <td>             
                    <a href='{{ path('user.admin.edit', { id: user.id}) }}' class= 'btn btn-success btn-sm'>Editer</a>   
                  </td>        
                </tr>
              {% endfor %}
            </tbody>
        </table>
        {# display navigation#}
        <div class="navigation d-flex justify-content-center">
            {{ knp_pagination_render(users) }}
        </div> 
      {% else %}
        <h4> Pas d'utilisateur </h4>
      {% endif %}
    </div>                          
    {% if is_granted('ROLE_ADMIN') %}   
        <a href ="{{ path('user.list') }}" class="btn btn-primary">
            Nouvel utilisateur
        </a>
    {% endif %}
{% endblock %}